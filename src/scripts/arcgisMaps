import MapView from '@arcgis/core/views/MapView.js'
import WebMap from '@arcgis/core/WebMap.js'

export function getMap(portalItem) {
  const webmap = new WebMap({ portalItem })
  return webmap
}

export function getView(webmap, divName) {
  const view = new MapView({
    map: webmap,
    container: divName,
  })
}

export async function loadMap(view) {
  try {
    await view.when()
    console.log('Map loaded')
  } catch (error) {
    console.warn('Failed to load map:', error)
  }
}
